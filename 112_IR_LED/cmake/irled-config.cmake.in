# IRLED CMake config file
#
# This file sets the following variables:
# IRLED_FOUND - Always TRUE.
# IRLED_INCLUDE_DIRS - Directories containing the IRLED include files.
# IRLED_IDL_DIRS - Directories containing the IRLED IDL files.
# IRLED_LIBRARIES - Libraries needed to use IRLED.
# IRLED_DEFINITIONS - Compiler flags for IRLED.
# IRLED_VERSION - The version of IRLED found.
# IRLED_VERSION_MAJOR - The major version of IRLED found.
# IRLED_VERSION_MINOR - The minor version of IRLED found.
# IRLED_VERSION_REVISION - The revision version of IRLED found.
# IRLED_VERSION_CANDIDATE - The candidate version of IRLED found.

message(STATUS "Found IRLED-@PROJECT_VERSION@")
set(IRLED_FOUND TRUE)

find_package(<dependency> REQUIRED)

#set(IRLED_INCLUDE_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@"
#    ${<dependency>_INCLUDE_DIRS}
#    )
#
#set(IRLED_IDL_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@/idl")
set(IRLED_INCLUDE_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@"
    ${<dependency>_INCLUDE_DIRS}
    )
set(IRLED_IDL_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@/idl")


if(WIN32)
    set(IRLED_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_STATIC_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
else(WIN32)
    set(IRLED_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_SHARED_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
endif(WIN32)

set(IRLED_DEFINITIONS ${<dependency>_DEFINITIONS})

set(IRLED_VERSION @PROJECT_VERSION@)
set(IRLED_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(IRLED_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(IRLED_VERSION_REVISION @PROJECT_VERSION_REVISION@)
set(IRLED_VERSION_CANDIDATE @PROJECT_VERSION_CANDIDATE@)

