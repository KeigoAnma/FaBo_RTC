# IRREC CMake config file
#
# This file sets the following variables:
# IRREC_FOUND - Always TRUE.
# IRREC_INCLUDE_DIRS - Directories containing the IRREC include files.
# IRREC_IDL_DIRS - Directories containing the IRREC IDL files.
# IRREC_LIBRARIES - Libraries needed to use IRREC.
# IRREC_DEFINITIONS - Compiler flags for IRREC.
# IRREC_VERSION - The version of IRREC found.
# IRREC_VERSION_MAJOR - The major version of IRREC found.
# IRREC_VERSION_MINOR - The minor version of IRREC found.
# IRREC_VERSION_REVISION - The revision version of IRREC found.
# IRREC_VERSION_CANDIDATE - The candidate version of IRREC found.

message(STATUS "Found IRREC-@PROJECT_VERSION@")
set(IRREC_FOUND TRUE)

find_package(<dependency> REQUIRED)

#set(IRREC_INCLUDE_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@"
#    ${<dependency>_INCLUDE_DIRS}
#    )
#
#set(IRREC_IDL_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@/idl")
set(IRREC_INCLUDE_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@"
    ${<dependency>_INCLUDE_DIRS}
    )
set(IRREC_IDL_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@/idl")


if(WIN32)
    set(IRREC_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_STATIC_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
else(WIN32)
    set(IRREC_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_SHARED_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
endif(WIN32)

set(IRREC_DEFINITIONS ${<dependency>_DEFINITIONS})

set(IRREC_VERSION @PROJECT_VERSION@)
set(IRREC_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(IRREC_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(IRREC_VERSION_REVISION @PROJECT_VERSION_REVISION@)
set(IRREC_VERSION_CANDIDATE @PROJECT_VERSION_CANDIDATE@)

